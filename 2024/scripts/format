#!/bin/sh

# Runs the formatters on the AoC 2024 project.

set -e

# ----------#
# Globals #
# ----------#
YEAR=2024
UV_EXEC=${UV_EXEC:-"uv"}

# ------------#
# Functions #
# ------------#

# -------#
# Main #
# -------#
main() {
  # Move into year directory.
  cd "${YEAR}"

  # Ensure dev dependencies are installed.
  ${UV_EXEC} sync --group dev

  # Format python files.
  ${UV_EXEC} run ruff format src tests
}
main "${@}"


